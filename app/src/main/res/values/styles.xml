<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PokemonButtonStyle">
        <item name="fontFamily">@font/pokemon_solid</item>
        <item name="android:textColor">@color/yellow_background</item>
        <item name="android:textColorHighlight">@color/black</item>
        <item name="android:backgroundTint">@color/blue_logo</item>
    </style>

    <style name="TypeTextView">
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="MeasuresTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="PokemonNameDetail">
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ImageViewDetail">
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="PokemonCardNameStyle">
        <item name="android:textSize">@dimen/card_pokemon_name_text_size</item>
        <item name="android:textColor">@color/blackPokemonName</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PokemonCardStyle">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="strokeColor">@color/card_stroke_color</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

</resources>